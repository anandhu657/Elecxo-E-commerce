<section style="background-color: #101010;">
    <div class="container w-75">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-6 d-flex align-items-center order-1 order-lg-1">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                    class="img-fluid" alt="Sample image">
                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-2">

                                <p class="text-center h1 fw-bold  mx-1 mx-md-4 mt-4">ElecXo</p>
                                <p class="text-center mb-5 h6">Admin Sign in</p>

                                <form class="mx-1 mx-md-4" onsubmit='return signinValidate()'
                                    action="/admin/admin_login" method="post">

                                    <div class="invalid-feedback ms-5 d-block">
                                        {{#if adminChecker}}
                                        {{adminChecker}}
                                        {{/if}}
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="email" id="email" class="form-control" name="email"
                                                placeholder="Email" />
                                        </div>
                                    </div>

                                    <div class="invalid-feedback ms-5 d-block">
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password" id="pass" class="form-control" name="password"
                                                placeholder="Password" />
                                        </div>
                                    </div>
                                    <div class="ms-5">
                                        Not an elecxo admin ?
                                        <a class="text-decoration-none" href="/user_signin">user sign in</a>
                                    </div>
                                    <div class="d-flex justify-content-center mx-4 mt-3 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Sign in</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>