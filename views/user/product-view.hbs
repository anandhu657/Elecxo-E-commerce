<div class="container">
    <div class="position-fixed w-25 d-none" id="success"
        style="left:530px; background-color: black; border-radius:10px; z-index:2000;">
        <p id="success-text" class="text-center mt-3" style="color: white;">Product Added to Cart</p>
    </div>

    <div class="d-flex justify-content-between mb-5">
        <div>
            <div>
                <div class="col-md-4 px-0" id="img-container" style="width: 400px;">
                    <img id="image" src="{{products.images.[0]}}" class="img-fluid">
                </div>

            </div>
            <div class="d-flex mt-3">
                <div class="col-md-2 me-3 px-0 ">
                    <button class="border-0" onclick="changeImage('img0')">
                        <img src="{{products.images.[0]}}" class="img-fluid" id="img0"
                            width="100">
                    </button>
                </div>
                <div class="col-md-2 me-3 px-0 ">
                    <button class="border-0" onclick="changeImage('img1')">
                        <img src="{{products.images.[1]}}" class="img-fluid" id="img1"
                            width="100">
                    </button>
                </div>
                <div class="col-md-2 me-3 px-0">
                    <button class="border-0" onclick="changeImage('img2')">
                        <img src="{{products.images.[2]}}" class="img-fluid" id="img2"
                            width="100">
                    </button>
                </div>
                <div class="col-md-2 me-3 px-0">
                    <button class="border-0" onclick="changeImage('img3')">
                        <img src="{{products.images.[3]}}" class="img-fluid" id="img3"
                            width="100">
                    </button>
                </div>
            </div>
        </div>
        <div class="my-5">
            <div class="mb-3">
                <div class="text-decor h2">{{products.product_name}}</div>
            </div>
            {{#ifNE products.offerPrice products.price}}
            <div class="mb-3">
                <div class="text-decor h3">₹<del>{{products.price}}</del>
                    {{#ifGT products.categoryOffer products.productOffer}}
                    <span class="ms-3" style="color: green;">({{products.categoryOffer}}% Offer)</span>
                    {{else}}
                    <span class="ms-3" style="color: green;">({{products.categoryOffer}}% Offer)</span>
                    {{/ifGT}}
                </div>
            </div>

            <div class="mb-3">
                <div class="text-decor h3">₹{{products.offerPrice}}
                </div>
            </div>
            {{else}}
            <div class="mb-3">
                <div class="text-decor h3">₹{{products.offerPrice}}
                </div>
            </div>
