            <div class="my-3" style="width: 30rem;">
                <div class="">{{products.description}}</div>
            </div>
            <div class="col-sm-3 mb-4 invisible">
                <span class="text-decor">Qty:</span>
                <div class="input-group">

                    <span class="input-group-prepend">
                        <button type="button" class="btn btn-outline-secondary btn-number" disabled="disabled"
                            data-type="minus" data-field="quant[1]">
                            <span class="fa fa-minus"></span>
                        </button>
                    </span>
                    <input type="text" name="quant[1]" class="form-control input-number" value="1" min="1" max="10">
                    <span class="input-group-append">
                        <button type="button" class="btn btn-outline-secondary btn-number" data-type="plus"
                            data-field="quant[1]">
                            <span class="fa fa-plus"></span>
                        </button>
                    </span>
                </div>
            </div>
            <div>
                <div class="d-flex">
                    <button onclick="addToWishlist('{{products._id}}')" type="button"
                        class="btn btn-outline-dark btn-lg me-3" style="border-radius: 0;">Add to
                        wishlist</button>
                    <button type="button" class="btn btn-dark btn-lg" style="border-radius: 0;"
                        onclick="addToCart('{{products._id}}')">Add to Cart</button>
                </div>
            </div>
        </div>
