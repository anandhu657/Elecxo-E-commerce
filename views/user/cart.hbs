<section class="h-100 gradient-custom pt-5">
  <div class="container py-5">
    <div class="row d-flex justify-content-center my-4">
      <div class="col-lg-8 col-sm-12">
        <div class="card mb-4">
          <div class="card-header py-3">
            <h5 class="mb-0">
              {{#if products}}
              <span id="non-empty-cart">Cart</span>
              <span id="empty-cart" style="display: none;">Empty Cart</span>
              {{else}}
              <span id="empty-cart">Empty Cart</span>
              {{/if}}
            </h5>
          </div>
          <div class="card-body">
            {{#each products}}
            <!-- Single item -->
            <div class="row" id="item{{this.product._id}}">
              <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                <!-- Image -->
                <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                  <a href="/product-view/{{this.product._id}}">
                    <img src="{{this.product.images.[0]}}" class="w-50"
                      alt="Blue Jeans Jacket" />
                  </a>
                  <a href="#!">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                  </a>
                </div>
                <!-- Image -->
              </div>

              <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                <!-- Data -->
                <p><strong>{{this.product.product_name}}</strong></p>
                {{!-- <p>Color: blue</p>
                <p>Size: M</p> --}}
                <a href="#" class="btn btn-primary btn-sm me-1 mb-2"
                  data-mdb-toggle="tooltip" title="Remove item" onclick="deleteCartItem('{{this.product._id}}')">
                  <i class="fas fa-trash"></i>
                </a>
                <button type="button" onclick="addToWishlist('{{this.product._id}}')" class="btn btn-danger btn-sm mb-2"
                  data-mdb-toggle="tooltip" title="Move to the wish list">
                  <i id="add{{this.product._id}}" class="fas fa-heart"></i>
                  <i id="remove{{this.product._id}}" class="fas fa-heart d-none" style="color: black;"></i>
                </button>
                <!-- Data -->
              </div>


              <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                <!-- Price -->
                <p class="text-start text-md-center">
                  <strong>₹{{this.product.price}}</strong>
                </p>

                <!-- Price -->
                <!-- Quantity -->
                <div class="d-flex mb-4" style="max-width: 300px">
                  <button class="btn btn-primary px-3 me-2" id="minus{{this.product._id}}"
                    onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../userId}}','{{this.product.stock}}',-1)">
                    <i class="fas fa-minus"></i>
                  </button>

                  <div class="form-outline">
                    <input id="{{this.product._id}}" min="0" name="quantity" value="{{this.quantity}}" type="number"
                      class="form-control" />
                  </div>

                  <button class="btn btn-primary px-3 ms-2" id="plus{{this.product._id}}"
                    onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../userId}}','{{this.product.stock}}',1)">
                    <i class="fas fa-plus"></i>
                  </button>
                </div>
                <!-- Quantity -->
              </div>
            </div>
            <!-- Single item -->
            <hr class="my-4" />
            {{/each}}
          </div>
        </div>

        <div class="card mb-4 mb-lg-0">
          <div class="card-body">
            <p><strong>We accept</strong></p>
            <img class="me-2" width="45px"
              src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
              alt="Visa" />
            <img class="me-2" width="45px"
              src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
              alt="American Express" />
            <img class="me-2" width="45px"
              src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
              alt="Mastercard" />
            {{!-- <img class="me-2" width="45px"
              src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce/includes/gateways/paypal/assets/images/paypal.webp"
              alt="PayPal acceptance mark" /> --}}
          </div>
        </div>
      </div>
      {{#if total}}
      <div class="col-lg-4 col-sm-12" id="summary">
        <div class="card mb-4">
          <div class="card-header py-3">
            <h5 class="mb-0">Summary</h5>
          </div>
          <div class="card-body">

            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                Products
                <span>₹<span id="subtotal">{{total}}</span></span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                Shipping
                <span>FREE</span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                <div>
                  <strong>Total amount</strong>
                  <strong>
                    <p class="mb-0">(including GST)</p>
                  </strong>
                </div>

                <span><strong>₹<span id="total">{{total}}</span></strong></span>
              </li>
            </ul>



            <a href="/checkout" class="btn btn-primary btn-lg btn-block">
              Place Order
            </a>

            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>