<section>
    <div class="container mt-5" style="padding-left:200px;">
        <h5>Manage Addresses</h5>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#add-new-address">
            Add New Address
        </button>
        {{#each response}}
        <div class="card my-3">
            <div class="card-body">
                <h6 class="d-inline  card-title">{{this.address.firstname}} {{this.address.lastname}}
                    <span class="ms-4">{{this.address.phonenumber}}</span>
                </h6>

                <div class="dropdown float-end">
                    <a class="text-decoration-none" href="#" role="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <i class="fa fa-ellipsis-v"></i>
                    </a>

                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" onclick="editAddress('{{this.address._id}}')">Edit</a>
                        </li>
                        <li><a class="dropdown-item" href="#" onclick="deleteAddress('{{this.address._id}}')">Delete</a>
                        </li>
                    </ul>
                </div>
                <p class="card-text mt-2" style="font-size: 14px;">{{this.address.address}}, {{this.address.landmark}},
                    {{this.address.state}}, {{this.address.country}}, {{this.address.pincode}}</p>
            </div>
        </div>
        {{/each}}
    </div>


    <div class="modal fade" id="add-new-address" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="add-new-addressLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="order-md-1">
                        <h4 class="mb-3">Add Address</h4>

                        <form class="needs-validation" method="post" id="add-address-form" novalidate="">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <input type="text" class="form-control bg-light" id="firstName"
                                        placeholder="First name" name="firstname" value="" required="">
                                    <div class="invalid-feedback"> Valid first name is required. </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <input type="text" class="form-control bg-light" id="lastName"
                                        placeholder="Last name" name="lastname" value="" required="">
                                    <div class="invalid-feedback"> Valid last name is required. </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <input type="email" class="form-control bg-light" id="email"
                                    placeholder="Enter email (optional)" name="email">
                                <div class="invalid-feedback"> Please enter a valid email address for shipping
                                    updates. </div>
                            </div>
                            <div class="mb-3">
                                <input type="text" class="form-control bg-light" id="address" placeholder="Address"
                                    name="address" value="" required="">
                                <div class="invalid-feedback"> Please enter your shipping address. </div>
                            </div>
                            <div class="mb-3">
                                <input type="text" class="form-control bg-light" id="landmark" placeholder="Landmark"
                                    name="landmark" value="" required="">
                                <div class="invalid-feedback"> Please enter your landmark. </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <input type="text" class="form-control bg-light" id="phonenumber" name="phonenumber"
                                        placeholder="Phone Number" value="" required="">
                                    <div class="invalid-feedback"> Valid Phone Number is required. </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <input type="text" class="form-control bg-light" id="alternate_phone"
                                        placeholder="Alternate phone number(Optional)" name="altnumber">

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5 mb-3">
                                    <label for="country">Country</label>
                                    <select class="form-control custom-select d-block w-100" id="country" name="country"
                                        required="">
                                        <option selected="true" disabled="disabled" value="">
                                        </option>
                                        <option>India</option>
                                        <option>United States</option>
                                    </select>
                                    <div class="invalid-feedback"> Please select a valid country. </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="state">State</label>
                                    <select class="form-control custom-select d-block w-100" id="state" name="state"
                                        required="">
                                        <option selected="true" disabled="disabled" value=""></option>
                                        <option>Kerala</option>
                                        <option>Tamilnadu</option>
                                        <option>Karnataka</option>
                                        <option>Delhi</option>
                                        <option>Uttar Pradhesh</option>
                                    </select>
                                    <div class="invalid-feedback"> Please provide a valid state. </div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="zip">Pincode</label>
                                    <input type="text" class="form-control" id="zip" placeholder="" name="pincode"
                                        value="" required="">
                                    <div class="invalid-feedback"> Pincode required. </div>
                                </div>
                            </div>

                            <hr class="mb-4">
                            <input type="hidden" name="userId" value="{{user._id}}">
                            <button class="btn btn-primary btn-lg btn-block w-100" type="submit">Add
                                address</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="staticBackdrop1" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
